<article class="uk-comment">
    <header class="uk-comment-header uk-grid-medium uk-flex-middle" uk-grid>
        <div class="uk-width-auto">
            <img class="uk-comment-avatar" src="{{this.author.image}}"
                width="80"
                height="80" alt="">
        </div>
        <div class="uk-width-expand">
            <h4 class="uk-comment-title uk-margin-remove"><a
                    class="uk-link" href="/users/{{this.author._id}}">{{this.author.username}}</a></h4>
            <ul class="uk-comment-meta uk-subnav uk-subnav-divider
                uk-margin-remove-top">
                <li>{{this.date}}</li>
            </ul>
        </div>
    </header>
    <div class="uk-comment-body">
        <p>{{this.content}}</p>
    </div>
</article>