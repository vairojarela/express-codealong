{{> userNavbar}}
<div class="uk-section uk-section-overlap uk-section-primary uk-preserve-color">
    <div class="uk-container">
        <div class="uk-panel uk-light uk-margin-medium">
            <div class="uk-text-right">
                {{>postsAdd}}
            </div>
            <h1 class="uk-heading-medium">Posts</h3>
        </div>
        <div class="uk-grid-match uk-child-width-expand@m" uk-grid>
            {{#each posts}}
            <div>
                <div class="uk-card uk-card-hover uk-card-default
                    uk-card-body">
                    <div class="uk-card-header">
                        <div class="uk-card-title">
                            <a class="uk-button uk-button-text"
                                href="posts/{{_id}}">{{title}}
                            </a>
                        </div>
                    </div>
                    <div class="uk-card-body">{{content}}</div>
                    <div class="uk-card-body">by: <a
                            href="/users/{{author._id}}">{{author.username}}</a></div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>