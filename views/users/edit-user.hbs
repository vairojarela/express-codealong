{{> userNavbar}}
<section class="uk-margin uk-container uk-text-center">
    <form class="uk-form-stacked" action="/users/addphoto"
        method="POST" enctype="multipart/form-data">
        <label for="image">
            <img width="180"
                height="180" class="profile-img" src="{{user.image}}">
            <input style="display:none;" class="uk-input"
                onchange="this.form.submit()" type="file" name="image"
                id="image">
        </label>
    </form>
    <h2 class="uk-heading-medium">@{{user.username}}</h2>
    {{>userUpdate}}
    <div class="profile-info">
        <h3>Name:{{user.name}}</h3>
        <p>Email: {{user.email}}</p>
        <p>Age: {{user.age}}</p>
        <p>City: {{user.city}}</p>
        <p>Phone: {{user.phone}}</p>
    </div>
</section>
{{#if posts}}
<div class="uk-section uk-section-secondary uk-preserve-color">
    <div class="uk-container">

        <div class="uk-panel uk-light uk-margin-medium">
            <h3>Recent posts by {{user.username}}</h3>
        </div>
        <div class="uk-grid-match uk-child-width-expand@m" uk-grid>
            {{#each posts}}
            <div>
                <div class="uk-card uk-card-hover uk-card-default
                    uk-card-body">
                    <div class="uk-card-header">
                        <div class="uk-card-title">
                            <a class="uk-button uk-button-text"
                                href="/posts/{{_id}}">{{title}}
                            </a>
                        </div>
                    </div>
                    <div>
                        <div class="uk-card-body">
                            {{content}}
                        </div>
                        <div class="uk-card-body">
                            {{relativeDate}}

                        </div>
                        {{> deletePost }}
                    </div>
                </div>
            </div>
            {{/each }}

        </div>
    </div>
</div>
{{/if}}
